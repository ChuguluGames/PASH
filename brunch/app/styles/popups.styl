.popup
	position absolute
	top 0
	left 0
	width 100%
	height 100%

	.overlay
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background #000
		opacity 0

	.background
		width 400px
		height auto
		max-height 280px
		background #fbfbfb
		position absolute
		top 0
		left 0
		overflow hidden
		display none

		.padding
			padding 10px

			.header
				width 100%
				.padding
					padding 10px
					height 20px

					.title
						font-size 16px
						text-align center

					.close
						width 20px
						height 20px
						float right

						a
							display block
							width 100%
							height 100%
							background blue

			.content
				width 100%
				.padding
					padding 10px
					font-size 10px
					overflow-y auto
					max-height 130px

			.footer
				width 100%
				height 20px

				.center
					margin auto
					.button
						background red
						float left
						width 150px
						margin 0 10px
						text-align center
						height 20px