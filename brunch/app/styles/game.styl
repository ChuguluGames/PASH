#game-view
	.topbar
		height 30px
		background #000000
		position relative
		margin-bottom 5px

		.back
			float left
			padding 0 10px
			background #fbfbfb
			margin-right 10px

			a
				display block
				line-height 25px
				text-decoration none

		.score
			float left
			background #ff0000
			.score-text
				font-weight bold
				float left
			.score-value
				width 100px
				text-align center

		.differences-status
			float left
			height 10px
			margin-top 10px
			margin-left 10px

			ul
				list-style none
				li
					float left
					width 10px
					height 10px
					margin-right 10px
					display block
					background #ff0000
					&.found
						background #00ff00

		.button-next-item
			float right
			padding 0 10px
			background #0000ff
			display:none
			a
				display block
				line-height 25px
				text-decoration none
				color #000

	.item-wrapper
		position relative
		height 272px

	.item-loading
		position absolute
		top 0
		left 0
		width 100%
		height 272px
		background #fbfbfb
		display none
		text-align center
		z-index 10

	.item
		position absolute
		top 0
		left 0
		width 100%
		height 272px
		z-index 9

		.first-image, .second-image
			width 237px
			height 272px
			float left
			position relative
			background-size 237px 272px
			background-position 50% 50%
			background-repeat no-repeat
			background-color transparent

			.difference
				position absolute
				background green
				opacity .5

			.error
				position absolute
				background red
				opacity .5

		.first-image
			margin-right 5px
