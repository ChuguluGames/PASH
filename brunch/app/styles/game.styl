#game-view
	height 320px
	width 480px
	background-color white
	background-size 480px 320px
	background-position 0 0
	background-repeat repeat-x
	background-image url(../images/ingame/ingame_background@2x.jpg)

	.topbar-wrapper
		padding-top 3px

		.topbar
			height 44px
			position relative

			.back
				float left
				height 41px
				width 77px
				background-size 77px 41px
				background-position 0 0
				background-repeat no-repeat
				background-image url(../images/ingame/ingame_btnback@2x.png)
				margin-left 3px
				margin-top 2px

				a
					display block
					text-indent -5000px
					height 41px
					width 77px
					background-size 77px 82px
					background-position 0 0
					background-repeat no-repeat
					background-image url(../images/ingame/ingame_btnback_title@2x.png)

					&:active
						background-position 0 -41px

					&.disabled
						background-position 0 -41px

			.toolbar-center
				margin-left 3px
				float left
				height 47px
				width 314px
				background-size 314px 47px
				background-position 0 0
				background-repeat no-repeat
				background-image url(../images/ingame/ingame_options@2x.png)

				.score
					float left
					margin-top 11px
					margin-left 20px

					.score-text
						float left
						height 18px
						width 49px
						background-size 49px 18px
						background-position 0 0
						background-repeat no-repeat
						background-image url(../images/ingame/ingame_score@2x.png)
						text-indent -5000px

					.score-value
						float left
						height 18px
						width 65px
						background-size 10px 18px
						background-position 50% 0
						background-repeat no-repeat
						background-image url(../images/ingame/ingame_special@2x.png)
						text-indent -5000px

				.timer
					float left
					height 47px
					width 62px
					background-size 62px 47px
					background-position 0 0
					background-repeat no-repeat
					background-image url(../images/ingame/ingame_time@2x.png)

				.differences-status
					float left
					height 23px
					margin-top 9px

					ul
						list-style none
						li
							float left
							height 23px
							width 23px
							background-size 23px 47px
							background-position 0 0
							background-repeat no-repeat
							background-image url(../images/ingame/ingame_lug@2x.png)
							margin-right -4px
							display none

							&.found
								background-position 0 -23px

			.button-next-item
				float right
				height 41px
				width 77px
				background-size 77px 41px
				background-position 0 0
				background-repeat no-repeat
				background-image url(../images/ingame/ingame_btnnext@2x.png)
				margin-right 3px
				margin-top 2px

				a
					display block
					text-indent -5000px
					height 41px
					width 77px
					background-size 77px 82px
					background-position 0 0
					background-repeat no-repeat
					background-image url(../images/ingame/ingame_btnnext_title@2x.png)

					&:active
						background-position 0 -41px

					&.disabled
						background-position 0 -41px

	.item-wrapper
		position relative
		height 272px

	.item-loading
		position absolute
		top 0
		left 0
		width 100%
		height 272px
		z-index 10
		background-size 70px 70px
		background-position 50% 50%
		background-repeat no-repeat
		background-image url(../images/ingame/image_spinner.gif)
		text-indent -5000px

		&.android
			height auto
			background none
			text-indent 0
			font-size 200px
			color #EC72E4
			font-weigth bold
			line-height 200px

			div
				width 170px
				text-align left
				margin auto

	.item
		position absolute
		top 0
		left 0
		width 100%
		height 272px
		z-index 9

		.first-image, .second-image
			width 237px
			height 272px
			float left
			position relative
			background-size 237px 272px
			background-position 50% 50%
			background-repeat no-repeat
			background-color transparent
			overflow hidden

			.difference, .error
				position absolute
				background-position 50% 50%
				background-repeat no-repeat
				background-color transparent

			.difference
				background-image url(../images/ingame/ingame_circle01@2x.png)

			.error
				background-image url(../images/ingame/ingame_spot_fail@2x.png)

		.first-image
			margin-left 2px
			margin-right 2px
