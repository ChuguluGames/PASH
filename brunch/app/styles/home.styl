#home-view
	position relative
	height 320px
	width 480px
	background-color white
	background-size 480px 320px
	background-position 0 0
	background-repeat no-repeat
	background-image url(../images/home/home_background@2x.jpg)

	.header
		position absolute
		top 0
		left 0
		width 100%
		height 43px

		.button-credit
			margin auto
			height 43px
			width 253px
			background-size 253px 43px
			background-position 0 0
			background-repeat no-repeat
			background-image url(../images/home/home_btncredit@2x.png)

	.wrapper-title
		position absolute
		top 37px
		left 0
		width 100%
		height 49px

	.title
		margin auto
		height 49px
		width 405px
		background-size 405px 49px
		background-position 0 0
		background-repeat no-repeat
		background-image url(../images/home/home_title@2x.png)

	.button-play
		position absolute
		top 130px
		right 50px
		height 58px
		width 136px
		background-size 136px 58px
		background-position 0 0
		background-repeat no-repeat
		background-image url(../images/home/home_btnplay@2x.png)

		a
			display block
			height 58px
			width 136px
			text-decoration none
			color #fff
			background-size 136px 117px
			background-position 0 0
			background-repeat no-repeat
			background-image url(../images/home/home_btnplay_title@2x.png)
			text-indent -5000px

			&:active
				background-position 0 -57px