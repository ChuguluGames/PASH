.popup
	z-index 999
	.background
		width 83%
		max-height 87%

		.padding
			padding 0.2em

			.header
				.padding
					padding 0.2em
					height 0.4em

					.title
						font-size 0.4em

					.close
						width .2em
						height .2em

			.content
				.padding
					padding 1.2em
					font-size .2em
					max-height 130px

			.footer
				height 20%
				width 100%
				display -webkit-box
				-webkit-box-orient horizontal
				-webkit-box-pack center
				-webkit-box-align center

				.button
					float left
					min-width 7.8em
					margin 0 10px
					font-size 0.5em
					line-height 1.5em

