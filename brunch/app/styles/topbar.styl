@import "app/styles/config"

.topbar-wrapper
	padding-top 3px

	.topbar
		height 44px
		position relative

		.button
			height 41px
			width 77px
			-webkit-background-size contain
			background-position 0 0
			background-repeat no-repeat
			margin-top 2px
			text-align center

			a
				display block
				height 100%
				width 100%
				font-size 11px
				line-height 37px
				text-shadow 2px 2px 2px rgba(0, 0, 0, .75)
				color rgb(255, 255, 255)

				&:active, &.disabled
					color rgb(255, 255, 25)
					opacity .3

		.back
			float left
			background-image url(path topbar/topbar_btnback@2x.png)
			margin-left 3px

			.wrapper
				padding-right 10px
				padding-left 13px