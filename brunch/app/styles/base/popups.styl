.popup
	position absolute
	top 0
	left 0
	width 100%
	height 100%

	.overlay
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background #000
		opacity 0

	.background
		height auto
		background #fbfbfb
		position absolute
		top 0
		left 0
		overflow hidden
		display none

		.padding

			.header
				width 100%
				.padding

					.title
						text-align center

					.close
						float right

						a
							display block
							width 100%
							height 100%
							background blue

			.content
				width 100%
				.padding
					overflow-y auto

			.footer
				width 100%

				.center
					margin auto
					.button
						background red
						float left
						text-align center
